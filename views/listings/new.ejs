<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
       <div class="col col-8 offset-2 ">
        <h2>Create New Listing</h2>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Add a catchy title" id="title" class="form-control" required/>
                <div class="invalid-feedback">Title is needed</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="listing[description]" id="description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter shorter description</div>
            </div>
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input type="text" name="listing[image.url]" value="" placeholder="Enter image URL/LINK" id="image" class="form-control"/>
                
            </div> -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input type="file" name="listing[image]" id="image" class="form-control"/>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Select Category:</label>
                <select class="form-select" id="category" name="listing[category]" aria-label="Default select example">
                    <option value="Trending">Trending</option>
                    <option value="Room">Room</option>
                    <option value="Iconic Cities">Iconic Cities</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Castles">Castles</option>
                    <option value="Amazing Pools">Amazing Pools</option>
                    <option value="Camping">Camping</option>
                    <option value="Farms">Farms</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Doms">Doms</option>
                    <option value="Boats">Boats</option>
                    <option value="Others" >Others</option>
                  </select>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input  name="listing[price]"  class="form-control" id="price" required/>
                    <div class="invalid-feedback">Please enter valid price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]"  placeholder="India" class="form-control" id="country" required/>
                    <div class="invalid-feedback">Country should be there</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="jaipur,rajeasthan" id="location" class="form-control" required/>
                <div class="invalid-feedback">Location should be there</div>
            </div>
            <button class="btn btn-dark add-btn">Add</button>
            <br/><br/>
        </form>
       </div>
    </div>
</body>